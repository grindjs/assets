#!/usr/bin/env bash
set -eo pipefail

rm -fr lib dist && mkdir -p lib dist

echo "Building"
BABEL_TARGET_VERSION=8.9 babel -s inline -d lib/ src/ --copy-files

echo "Building LiveReload Client"
rollup -c src/LiveReload/Client/.rolluprc.js
uglifyjs --compress -o dist/livereload.min.js -- dist/livereload.js
